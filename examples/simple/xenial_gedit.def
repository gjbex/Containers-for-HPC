BootStrap: debootstrap
OSVersion: xenial
MirrorURL: http://us.archive.ubuntu.com/ubuntu/


%runscript
    /usr/bin/gedit

%setup
    mkdir ${SINGULARITY_ROOTFS}/sample_data

%files
    data/*.csv sample_data

%post
    sed -i 's/$/ universe/' /etc/apt/sources.list
    apt-get update
    apt-get -y install dbus-x11
    apt-get -y install unity-gtk3-module
    apt-get -y install libcanberra-gtk3-module
    apt-get -y install gedit
    mkdir -p /tmp/gedit-user
    ln -s /tmp/gedit/user /run/user
